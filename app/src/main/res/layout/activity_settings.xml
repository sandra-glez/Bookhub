<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu perfil"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_avatar"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="12dp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Botones de menú -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar perfil"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            app:iconGravity="textStart"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExchangeHistory"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de intercambios"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            app:iconGravity="textStart"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrivacySettings"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajustes de privacidad"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            app:iconGravity="textStart"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            />

        <!-- Cerrar sesión (estilo diferente) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="@android:color/holo_red_dark"
            android:iconTint="@android:color/holo_red_dark"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginTop="16dp"
            app:iconGravity="textStart"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            />



    </LinearLayout>
</ScrollView>

