<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookhub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorAccent">@color/verde</item>
        <item name="materialButtonStyle">@style/CustomButtonGreen</item>

        <!-- Opcional: Personaliza la barra de estado -->
        <item name="android:statusBarColor">@color/verde</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CustomButtonGreen" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">@null</item> <!-- Evita interferencias -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButtonWhite" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="backgroundTint">@null</item> <!-- Evita interferencias -->
        <item name="android:textColor">@color/black</item>
    </style>

</resources>